<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.start.StartActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="205dp"
            android:layout_height="54dp"
            android:layout_below="@+id/image_avatar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="102dp"
            android:gravity="center"
            android:text="@string/berkebun_plus"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:fontFamily="@font/plusjakartasans_extrabold"/>


        <Button
            android:id="@+id/button_masuk"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:layout_below="@+id/text_description"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/border_button"
            android:text="@string/title_masuk"
            android:fontFamily="@font/plusjakartasans_extrabold"/>

        <TextView
            android:id="@+id/text_agreement"
            android:layout_width="309dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="658dp"
            android:gravity="center"
            android:text="@string/txt_description_two"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="309dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="421dp"
            android:gravity="center"
            android:text="@string/txt_description_one"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/avatar" />
</RelativeLayout>