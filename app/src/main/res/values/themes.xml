<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BerkebunPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_cyan</item>
        <item name="colorPrimaryVariant">@color/dark_cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/strong_cyan</item>
        <item name="colorSecondaryVariant">@color/strong_cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.HeadingMedium">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="TextContent.HeadingMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Style for Title Content. -->
    <style name="TextContent.TitleMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="TextContent.TitleMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.TitleLarge">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
    </style>

    <style name="TextContent.TitleLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Style for Body Content. -->
    <style name="TextContent.BodySmall">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
    </style>

    <style name="TextContent.BodySmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="TextContent.BodyMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Style for CardView Soon Feature. -->
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">#fff</item>
    </style>

    <!-- Custom Style for Button. -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_selector1</item>
    </style>
</resources>